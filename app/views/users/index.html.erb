<div class="body">
    <div class="container">
        <%=  notice %>
        <div class="row">

            <%= render 'shared/side', user: @user, book: @book %>

            <div class="col-xs-9">
                <h2>Users</h2>
                <table class="table">
                    <thead>
                        <th>image</th>
                        <th>name</th>
                        <th colspan="3"></th>
                    </thead>

                    <% @users.each do |user| %>
                    <tbody>
                        <th><%= link_to user_path(user) do %>
                            <%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no2_image.jpg"%></th>
                            <% end %>
                        <th><%= user.name %></th>
                        <th>フォロー数:<%= user.followers.count %></th>
                        <th>フォロワー数:<%= user.followings.count %></th>
                        <th><%= link_to "Show", user_path(user) %></th>
                    </tbody>
                    <% end %>
                </table>
            </div>
        </div>
    </div>
</div>
